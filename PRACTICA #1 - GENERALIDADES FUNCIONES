int main(){
	int N;
	cout<<"ingresar tamaÃ±o del arreglo unidimensional: ";cin>> N;
	int arreglo[N];
	
}

float calcular_promedio(int arreglo[], int N)
{
	float promedioTotal=0;
	
	for(int i=0; i<N; i++)
	{
		promedioTotal+=arreglo[i];
	}
	promedioTotal=promedioTotal/N
	return promedioTotal;
}

long int elevar(long int x, long int e){
	if(e == 1){
		return x;
	}
	if(e == 0){
		return 1;
	}
	int a = x;
	for(int i = 1; i < e; i++){
		x = a*x;
	}
	return x;
} 

int valor_exponente(int arreglo[], int N, int v)
{
	int contador=0;
	while(arreglo[v]>0)
	{
		arreglo[v]/10;
		contador+=1;
	}
	return contador;
}

void llenar_arreglo(int x[], int N){
	for(int i = 0; i < N; i++){
		cout<<"ingrese el la posicion "<<i + 1<<endl;
		cin>>x[i];
		system("cls");
	}
} 
